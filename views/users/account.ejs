<% if(user) { %>
    <div class="card border-success mb-3">
        <div class="card-header">
            <h3 class="text-success">Edit: <%= user.username %></h3>
        </div>
                    <div class="card-body">
                <%if(changes.length != 0) {%>
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <%= changes %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } %>
                

                <form action="/admin/save/<%=locals.user.id%>" method="POST">
                    <div class="row">
                        <img src="/images/users/avatar.png" class="img-fluid col">
                        <div class="form-group col">
                            <div class="form-row col">
                                <div class="form-group col-md-10">
                                    <label for="username">Username</label>
                                    <input type="text" class="form-control" id="username" name="username"
                                        value="<%= user.username %>">
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="userLevel">Level</label>
                                    <input type="text" class="form-control" id="userLevel" name="userLevel" value="<%= user.level %>" disabled style="text-align: center;">
                                </div>
                            </div>
                            <div class="form-group col">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>">
                            </div>
                            <div class="form-group col">
                                <label for="oldPw">Old Password</label>
                                <input type="password" class="form-control" id="oldPw" name="oldPw" autocomplete="off">
                            </div>
                            <div class="form-group col">
                                <label for="newPw">New Password</label>
                                <input type="password" class="form-control" id="newPw" name="newPw">
                            </div>
                            <div class="form-group col">
                                <label for="checkNewPw">Confirm New Password</label>
                                <input type="password" class="form-control" id="checkNewPw" name="checkNewPw">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer pb-1 mb-0">
                        <button type="submit" class="btn btn-outline-success btn-block mb-2">Save Changes</button>
                    </div>
                    <div class="card-footer pt-0" style="border-top: 0px">
                        <form action="/admin/delete/<%= locals.user.id %>" method="POST">
                            <button type="submit" class="btn btn-outline-danger btn-block">Delete User</button>
                        </form>
                    </div>
                </form>

            </div>


    </div>
    <% } %>