<form action="/admin/addAnimal" method="POST" enctype="multipart/form-data">
    <div class="card border-success mb-3">
        <div class="card-header">
            <h3 class="text-success">Add Animal</h3>
        </div>
        <div class="card-body">
            <%if(changes.length != 0) {%>
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <%= changes %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% } %>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="category">category</label>
                    <input type="text" class="form-control" id="category" name="category" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="animalLevel">Level</label>
                    <input type="number" class="form-control" id="animalLevel" name="animalLevel" value="1">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="animalAttack">Attack</label>
                    <input type="number" class="form-control" id="animalAttack" name="animalAttack" value="1">
                </div>
                <div class="form-group col-md-4">
                    <label for="animalDefense">Defense</label>
                    <input type="number" class="form-control" id="animalDefense" name="animalDefense" value="1">
                </div>
                <div class="form-group col-md-4">
                    <label for="animalHP">HP</label>
                    <input type="number" class="form-control" id="animalHP" name="animalHP" value="10">
                </div>
            </div>
            <div class="form-group">
                <div class="custom-file col-md-6">
                    <label class="custom-file-label" for="animalPictures" style="color:black">Select a picture</label>
                    <input type="file" name="animalPictures" class="custom-file-input" id="animalPictures" required>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-outline-success btn-block mb-2">Save Changes</button>
        </div>
    </div>
</form>