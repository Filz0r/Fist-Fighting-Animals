<div class="card border-success mb-3">
    <div class="card-header">
        <h3 class="text-success">Add Animal</h3>
    </div>
    <form action="/admin/addAnimal" method="POST" enctype="multipart/form-data">
    <div class="card-body">

        <%if(changes.length != 0) {%>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <%= changes %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>
        <div class="row">
            <img src="/images/animals/avatar.png" class="card-img-top col-md-4">
            <div class="card-body col-md-8">
                <%if(changes.length != 0) {%>
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <%= changes %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } %>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="category">Category</label>
                        <input type="text" class="form-control" id="category" name="category" value="">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="animalLevel">Level</label>
                        <input type="number" class="form-control" id="animalLevel" name="animalLevel" value="1">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="animalAttack">Attack</label>
                        <input type="number" class="form-control" id="animalAttack" name="animalAttack" value="1">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="animalDefense">Defense</label>
                        <input type="number" class="form-control" id="animalDefense" name="animalDefense" value="1">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="animalHP">HP</label>
                        <input type="number" class="form-control" id="animalHP" name="animalHP" value="10">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="storyLvl">Story Level</label>
                        <input type="number" class="form-control" id="storyLvl" name="storyLvl" value="1">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="pointsToAdd">Points To Add</label>
                        <input type="number" class="form-control" id="pointsToAdd" name="pointsToAdd" value="1">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="coinsDrop">Coins to Drop</label>
                        <input type="number" class="form-control" id="coinsDrop" name="coinsDrop" value="10">
                    </div>
                    <div class="form-group">
                        <div class="custom-file">
                            <label class="custom-file-label" for="animalPictures" style="color:black">Select a
                                picture</label>
                            <input type="file" name="animalPictures" class="custom-file-input" id="animalPictures"
                                required>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-outline-success btn-block mb-2">Save Changes</button>
    </div>
    </form>
</div>